<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" spacing="5.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="lesson4.sample.Controller">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <TextArea fx:id="messageTextArea" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true"
              VBox.vgrow="ALWAYS"/>
    <HBox prefHeight="40.0" prefWidth="600.0" spacing="5.0">
        <TextField fx:id="messageTextField" onAction="#sendMessage" prefHeight="40.0" prefWidth="490.0"
                   HBox.hgrow="ALWAYS"/>
        <Button fx:id="sendingButton" mnemonicParsing="false" onAction="#sendMessage" prefHeight="40.0"
                prefWidth="110.0" text="Отправить" HBox.hgrow="NEVER"/>
    </HBox>
</VBox>
